<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.androidtown.here_is.LoginActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/backgound_login" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.1"></LinearLayout>


    <EditText
        android:id="@+id/editText_ID"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0.2"
        android:hint="아이디"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/editText_PW"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="Password"
        android:textSize="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:inputType="textPassword"/>

    <Button
        android:textColor="#FF666666"
        android:id="@+id/btn_login_check"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:text="  로   그   인  "
        android:textSize="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:onClick="btn_login_check_Clicked"
        android:background="#ffffffff"


        />

    <Button
        android:textColor="#ffffff"
        android:id="@+id/btn_signup"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.115"
        android:onClick="btn_signup_Clicked"
        android:text="회원가입"
        android:background="#00ff0000"  />



</LinearLayout>
